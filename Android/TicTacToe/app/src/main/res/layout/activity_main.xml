<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="24dp"
    tools:context=".AddPlayers"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/poppins"
        android:text="Welcome to Tic Tac Toe!"
        android:textSize="24sp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Enter Player Names"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <EditText
            android:maxLength="6"
            android:id="@+id/editTextPlayer1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:hint="Enter Player 1's name (max 6 characters)"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#333333"
            android:textColorHint="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <EditText
            android:maxLength="6"
            android:id="@+id/editTextPlayer2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:hint="Enter Player 2's name (max 6 characters)"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#333333"
            android:textColorHint="#CCCCCC"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Start Game"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="18sp">

        </Button>
    </LinearLayout>


</LinearLayout>